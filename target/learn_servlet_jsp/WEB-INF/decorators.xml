<?xml version="1.0" encoding="UTF-8" ?>
<decorators defaultdir="/decorators">

    <excludes>
        <!--Những api nào trong excludes sẽ bỏ qua apply giao diện -->
        <pattern>/api*</pattern>
    </excludes>
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>

    <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>

    <decorator name="resgister" page="resgister.jsp">
        <pattern>/dang-ky</pattern>
    </decorator>
</decorators>